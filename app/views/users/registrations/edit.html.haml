.single-container
  .single-header
    = render "users/shared/header-logo"
  .single-main
    .single-main__box
      %h2.single-main__title 発送元・お届け先住所変更
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class: "registration-form"}) do |f|
        = render "users/shared/error_messages", resource: @user
        .form-group
          .field-nickname
            = f.label :"ニックネーム"
            %span.must 必須
            %br/
            = f.text_field :nickname, autocomplete: "nickname", class: "input-default-n", placeholder: "例）フリマ太郎(10文字まで)"
          .field
            = f.label :"メールアドレス"
            %span.must 必須
            %br/
            = f.email_field :email, autocomplete: "email", class: "input-default", placeholder: "PC・携帯どちらでも可"
          .field
            = f.label :"お名前(全角)"
            %span.must 必須
            %br/
            = f.text_field :lastname, autocomplete: "lastname", class: "input-default-half", placeholder: "例)山田"
            = f.text_field :firstname, autocomplete: "firstname", class: "input-default-half2", placeholder: "例)彩"
          .field
            = f.label :"お名前カナ(全角)"
            %span.must 必須
            %br/
            = f.text_field :lastname_kana, autocomplete: "lastname_kana", class: "input-default-half", placeholder: "例)ヤマダ"
            = f.text_field :firstname_kana, autocomplete: "firstname_kana", class: "input-default-half2", placeholder: "例)アヤ"
          .actions
            = f.submit "更新する", class:"use-edit-btn"
  .single-footer
    = render "users/shared/footer-logo"
