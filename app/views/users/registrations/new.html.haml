.single-container
  .single-header
    %h1 ロゴ
  .single-main
    .single-main__box
      .single-main__box__title
        %h2 会員情報入力
      .single-main__box__container
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class: "registration-form"}) do |f|
          = render "devise/shared/error_messages", resource: resource
          .form-group
            .field
              = f.label nickname: "ニックネーム"
              %span 必須
              %br/
              = f.text_field :nickname, autofocus: true, autocomplete: "nickname"
            .field
              = f.label :email
              %span 必須
              %br/
              = f.email_field :email, autocomplete: "email"
            .field
              = f.label :password
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} characters minimum)
              %span 必須
              %br/
              = f.password_field :password, autocomplete: "new-password"
            .field
              = f.label :password_confirmation
              %span 必須
              %br/
              = f.password_field :password_confirmation, autocomplete: "new-password"
            .field
              = f.label :lastname
              %span 必須
              %br/
              = f.text_field :lastname, autocomplete: "lastname"
            .field
              = f.label :firsttname
              %span 必須
              %br/
              = f.text_field :firstname, autocomplete: "firstname"
            .field
              = f.label :lastname_kana
              %span 必須
              %br/
              = f.text_field :lastname_kana, autocomplete: "lastname_kana"
            .field
              = f.label :firstname_kana
              %span 必須
              %br/
              = f.text_field :firstname_kana, autocomplete: "firstname_kana"
            .field
              = f.label :birthday
              %span 必須
              %br/
              != sprintf(f.date_select(:birthday, prefix:'birthday',with_css_classes:'XXXXX', prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日'
            .actions
              = f.submit "Sign up"
        = render "users/shared/links"
  .single-footer
    %h2 ロゴ