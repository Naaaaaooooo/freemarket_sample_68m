%ul.parent__tree
  - @category_parent.each do |parent|
    %li.parent__tree__item
      = link_to "#{parent.name}", "/category/#{parent.id}", class:"parent"

      %ul.children__tree
        - parent.children.each do |child|
          %li.children__tree__item
            = link_to "#{child.name}", "/category/#{child.id}", class:"child"

            %ul.grandchildren__tree
              - child.children.each do |grandchild|
                %li.grandchildren__tree__item
                  = link_to "#{grandchild.name}", "/category/#{grandchild.id}", class:"grandchild"