.header__box
  .header__box__main
    .main__icon
      = image_tag '/logo.png', alt: 'title', height: '41', width: '140'
    .main__search
      = form_with(url: "#", local: true, method: :get, class: "search-form") do |form|
        = form.text_field :keyword, placeholder: "キーワードから探す", class: "search-input"
        = form.submit src: "/icon-search 1.png", type: "image", class: "search-btn"
  .header__box__action
    %ul.action__list
      %li.list__category
        = link_to "#", class:"js-tree-btn" do
          カテゴリー
          .category-tree
            %ul.parent__tree
              - @category_parent.each do |parent|
                -# = link_to category_path(parent.id)
                %li#parent__tree__item
                  = parent.name

                  %ul.children__tree
                    - parent.children.each do |child|
                      -# = link_to category_path(child.id)
                      %li.children__tree__item
                        = child.name

                      %ul.grandchildren__tree
                        - child.children.each do |grandchild|
                          -# = link_to category_path(grandchild.id)
                          %li.grandchildren__tree__item
                            = grandchild.name

      %li.list__brand
        = link_to "#", class:"js-tree-btn" do
          ブランド
        .brand-tree
          -# %ul.first__tree
          -#   %li.brand__item
          -#     ナイキだお

    %ul.action__user
      %li.user__login
        = link_to new_user_session_path, class: "login_btn" do
          ログイン
      %li.user__new
        = link_to new_user_registration_path, class: "new_btn" do
          新規会員登録